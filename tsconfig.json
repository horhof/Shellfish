{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "outDir": "build/",
    "preserveConstEnums": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "pretty": true
  },
  "include": [
    "src/*.ts"
  ]
}
